<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoMedicalStaff" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
    </style>
    
    <style name="TextScreenLogin" parent="TextAppearance.AppCompat">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dark_accent_text</item>
    </style>
    
    <style name="ButtonAuthorization" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/accent_icon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/google</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextScreenAuthorizationMin" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/accent_icon</item>
    </style>

    <style name="TextToolbar" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    
    <style name="TextMenu" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent_text</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MenuDoc" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/accent_text_min</item>
    </style>
    
    <style name="HeadingChats" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#8886b2</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DescrChats" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#a4a4a6</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextTimeChats" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#a4a4a6</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="HeadingToolbarChats" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#7b70ff</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DescrToolbarChats" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

</resources>